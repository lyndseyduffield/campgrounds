<% include ../partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Create a New Campground!</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" name="name" placeholder="Enter name here"/>
                </div>
                 <div class="form-group">
                     <input class="form-control" type="number" name="price" placeholder="Enter price here" min="0.01" step="0.01"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Enter image url here"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Enter description here"/>
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
            </form>
                <a href="/campgrounds">View All Campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>