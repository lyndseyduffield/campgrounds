<% include ../partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Add a New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" name="comment[text]" placeholder="text"/>
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
            </form>
                <a href="/campgrounds">View All Campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>