<!DOCTYPE html>
<html>
    <head>
        <title>Yelp Camp</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <nav class="navbar navbar-default">
        <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/campgrounds">YelpCamp</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                 <% if(!currentUser) { %>
                  <li style="margin: 10px;"><a href="/register">Sign up</a></li>
                  <li style="margin: 10px;"><a href="/login">Login</a></li>
                <% } else { %>
                  <li><a>Signed in as, <%= currentUser.username %></a></li>
                  <li style="margin: 10px;"><a href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<% if(error && error.length > 0) { %>
<div class="container">
  <div class="alert alert-danger" role="alert">
  <%= error %>
</div>  
</div>
<% } else if(success && success.length > 0) { %>
<div class="container">
  <div class="alert alert-success" role="alert">
  <%= success %>
</div>  
</div>
<% } %>